{
    "manifest_version": 3,
    "name": "Map Syncing Extension",
    "version": "1.0",
    "description": "Highlight a place name on a webpage and open it in Google or Apple Maps.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  